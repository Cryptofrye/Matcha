    <ul>
        {{#each errors}}
        <li>{{ this.msg }}</li>
        {{/each}}

    </ul>
</div>
{{/if}}

{{#if error_msg}}
<div class="alert alert-danger" role="alert">
    <ul>
        {{ error_msg }}
    </ul>
</div>
{{/if}}

